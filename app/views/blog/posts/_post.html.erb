<% if @url %>

  <div class='col-sm-12 col-lg-12'>
    <div class="card">
      <%= link_to post do %>
        <div class="card-topper" style='background-image: url(<%= post.cover.thumb %>);'></div>
      <% end %>
      <div class="card-block">
        <h4 class="card-title"><%= link_to post.title, post, class: "mini-story-header" %></h4>
        <!--raw kann gefährlich sein-->
        <p class='tags'><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name) }.join(', ') %></p>
        <%= link_to post do %>
          <p class="card-text"><%= truncate(post.description, length: 130) %></p>
        <% end %>
        <h6 class="published-date"><%= post.display_day_published %></h6>
      </div>
    </div>
  </div>

<% else %>

  <div class='col-sm-6 col-lg-3'>
    <div class="card">
      <%= link_to post do %>
        <div class="card-topper" style='background-image: url(<%= post.cover.thumb %>);'></div>
      <% end %>
      <div class="card-block">
        <h4 class="card-title"><%= link_to post.title, post, class: "mini-story-header" %></h4>
        <!--raw kann gefährlich sein-->
        <p class='tags'><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name) }.join(', ') %></p>
        <%= link_to post do %>
          <p class="card-text"><%= truncate(post.description, length: 130) %></p>
        <% end %>
        <h6 class="published-date"><%= post.display_day_published %></h6>
      </div>
    </div>
  </div>
  
<% end %>